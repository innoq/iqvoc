/* ###################################### */
/* ### Customizable in your app's CSS ### */
/* ###################################### */
#header {
  height: 85px;
  padding: 9px 1em 1em 160px;
  background: url(<%= asset_data_uri 'header_long.png' %>) no-repeat;
}

#header h1 {
	color: #000;
	font-weight: bold;
}

ul#navi_main {
  position: absolute;
  top: 75px;
  margin: 0;
  padding: 0;
}

ul#navi_main li.active a {
  color: #000;
}

ul#navi_main li a {
  font-weight: bold;
}

a,
a:hover,
ul.treeview .hover {
  color: #308110;
}

a {
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

a.unpublished {
  color: #808110;
}

a.back {
  background: url(<%= asset_data_uri 'back.png' %>) 0 50% no-repeat;
  padding-left: 20px;
}

ul.letter_selector { width: 100%; overflow: auto; margin: 0 0 10px; padding: 0; list-style-type: none; }
.letter_selector li { float: left; margin: 0 0.25em 5px 0;  }
.letter_selector li.special { float: right; } /* XXX: this is less than ideal */
.letter_selector a { padding: 2px 5px; }

.pagination {
  display: block;
}
.pagination a,
.pagination .current,
.pagination .gap {
  margin-right: 5px;
  border: 1px solid #318210;
  padding: 2px 5px;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
  background-color: #C0FAB4;
}
.pagination .disabled,
.pagination .gap {
  border-color: silver;
  color: silver;
  background-color: transparent;
}
.pagination .current {
  border-color: #F3AC40;
  background-color: #FEFBDC;
}

/* visualizations */

.sections {
	overflow: hidden; /* block formatting context */
	zoom: 1; /* hasLayout */
}

#infovis {
	float: right;
	width: 300px;
	height: 300px;
	overflow: hidden;
	margin: 0 0 10px 10px;
	border: 1px solid #EEE;
}

#infovis .button {
	float: right;
}

#infovis .concept a {
	color: #000;
}

#infovis.filtered .concept {
	overflow: visible;
	color: #111;
}

#infovis .label {
	padding: 0 2px;
	color: #111;
	background-color: #EEE;
}

#infovis-label .label {
	font-size: 0.8em;
}

/* ######################################## */
/* # Core CSS. Customizing is discouraged # */
/* ######################################## */

#controls {
  border-bottom: 2px solid #AAA;
  padding: 2px 5px;
  text-align: center;
  background-color: #000;
}

#controls,
#controls a {
  height: 1.1em;
  overflow: hidden;
  line-height: 1.1em;
    padding-bottom: 3px;
}

#controls * {
  z-index: 99; /* work around overly wide header */
}

#controls a {
	color: #EEE;
}

#controls ul {
  border: 1px solid #AAA;
  border-radius: 0 0 5px 5px;
  -moz-border-radius: 0 0 5px 5px;
  padding: 5px;
  text-align: left;
}

#controls ul a {
  display: inline;
	color: #000;
}

#controls h3 {
  margin: 0.2em 0;
  font-size: 1.1em;
  font-weight: bold;
}

#controls label {
  display: block;
  width: 100%;
  font-weight: normal;
}

#auth_controls label {
  display: inline;
  font-weight: bold;
}

#auth_controls ul,
#auth_controls li {
  width: auto;
}

#auth_controls:hover ul,
#auth_controls.hover ul {
  right: 5px;
}

.menu,
.menu ul {
  margin: 0;
  padding: 0;
  list-style-type: none;
}

.menu li,
.menu a,
.menu li ul {
  width: 10em;
}

.menu a {
  display: block;
  text-decoration: none;
}

.menu li {
  float: right;
}

.menu li ul {
  position: absolute;
  left: -999em;
  background-color: #EEE;
}

.menu li:hover ul,
.menu li.hover ul {
  left: auto;
  right: auto;
}

ul#navi_main li {
  list-style-type: none;
  display: inline;
  margin-right: 1.0em;
  padding: 0;
}

#navi_sub ul {
  padding: 0;
}

#navi_sub ul li {
  list-style-type: none;
  display: inline;
  padding: 0;
}

#dashboard_controls {
  height: 2em;
  padding-left: 0;
  list-style-type: none;
}

#dashboard_controls li {
  float: left;
  margin-right: 1.5em;
}

#footer {
  background: url(<%= asset_data_uri 'footer.png' %>) no-repeat top right;
  height: 43px;
  margin-top: 15px;
  padding-top: 10px;
  border-top: 1px solid #000;
}

.button {
  outline: 0;
}

.hidden {
  display: none;
}

.flash_notice {
  border: 1px solid #318210;
  background-color: #C0FAB4;
  padding: 5px;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
}

.flash_error {
  border: 1px solid #A91B1B;
  background-color: #F5C2C2;
  padding: 5px;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
}

.error_list {
  list-style-type: none;
}

.button, input[type=submit], button {
  padding: 4px 6px;
  font: 1em 'Helvetica Neue', Helvetica, Arial, sans-serif;
  color: #fff !important;
  background: #409120;
  background: -moz-linear-gradient(0% 100% 90deg, #B0EAA4, #308110);
  background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#B0EAA4), to(#308110));
  border: 1px solid #308110;
  border-radius: 5px;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
  cursor: pointer;
  text-shadow: 0 -1px 1px #308110;
  text-decoration: none;
}

input[type=submit]:hover, button:hover, a.button:hover {
  color: #efefef !important;
  background: #b0eAa4;
  background: -moz-linear-gradient(0% 100% 90deg, #a0dA94, #207100);
  background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#a0dA94), to(#207100));
  border: 1px solid #207100;
  text-shadow: 0 -1px 1px #207100;
  text-decoration: none;
}

input[type=submit]:active, button:active, a.button:active {
  border: 1px solid #106100;
  -moz-box-shadow: inset 0 0 6px 3px #207100, 0 1px 0 0 #fff;
  -webkit-box-shadow: inset 0 0 6px 3px #207100, 0 1px 0 0 #fff;
  text-decoration: none;
}

#abstract_uri {
  display: block;
  line-height: 24px;
  margin-bottom: 20px;
  padding: 4px 0 2px;
}

#abstract_uri img {
	vertical-align: middle;
	border: none;
}

#untranslated {
  float: right;
}

div.editing_versioning_toolbar {
  margin-bottom: 20px;
  padding: 6px 4px 6px 4px;
}

div.editing_versioning_toolbar form div, div.editing_versioning_toolbar form {
  display: inline;
}

div.relation {
  margin-bottom: 0.7em;
}

ol textarea { /* neutralize blueprint defaults */
  margin-top: 0;
}

.concept #content h3 {
  clear: both;
  margin: 1em 0;
}

.concept .relation { /* contain floats */
  width: 100%;
  overflow: hidden;
}

.concept .relation h4 {
  width: 20%;
  clear: both;
  float: left;
}

.concept .relation-body {
  width: 75%;
  float: right;
}

.concept .block { /* neutralize .relation-body floating */
  width: auto;
  float: none;
  clear: both;
}

.entity_list { /* contain floats */
  width: 100%;
  overflow: hidden;
  list-style-type: none;
}

.entity_list li {
  float: left;
}

.relation-body .entity_list {
  margin: 0;
  padding: 0;
}

.sections .entity_list li,
.relation-body .entity_list li {
  margin-right: 1em;
}

.sections .entity_list li:after,
.relation-body .entity_list li:after {
  content: ",";
}
.sections .entity_list li:last-child:after,
.relation-body .entity_list li:last-child:after {
  content: "";
}

.note_annotations { /* contain floats */
  width: 100%;
  overflow: hidden;
}

fieldset .note_annotations {
  margin-left: 1.5em;
}

.note_annotations dt,
.note_annotations dd {
  float: left;
  margin: 0 1em 0 0;
}

.note_annotations dt {
  clear: left;
  width: 8em;
}

.entity_select li {
  margin: 3px;
  padding: 1px 3px;
  border: 1px solid #CCD5E4;
  border-radius: 5px;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
  font-size: 11px;
  color: #000;
  background-color: #EFF2F7;
}

.entity_select a.btn {
  margin-left: 5px;
  font-weight: bold;
  color: #A6B3CF;
  cursor: pointer;
}

.entity_select img {
  margin-left: -20px; /* move into adjacent INPUT */
}

tr.hover {
  cursor: pointer;
  background-color: #C0FAB4;
}

.note_language {
  font-size: 75%;
  line-height: 175%;
  color: grey;
}

.valid { color: #318210; }
.invalid { color: #A91B1B; }

div.sorting_arrows { display: inline; margin-left: 3px; }
div.sorting_arrows a img.arrow_down { vertical-align: -5px; }
div.sorting_arrows a img.arrow_up { vertical-align: -4px; }

dl#search_results dt { margin-top: 15px; }

select#c { width: 300px; }

#footer_box { position: relative; }
#w3c_link {
  position: absolute;
  top:-5px;
  left:770px;
  width: 180px;
  height: 30px;
}
