<%= bootstrap_form_for user_session, :url => user_session_path, :layout => :horizontal, :label_col => 'col-sm-2', :control_col => 'col-sm-6' do |f| %>
  <%= hidden_field_tag :back_to, params[:back_to].presence || @return_url %>
  <%= f.email_field :email %>
  <%= f.password_field :password %>
  <%= f.form_group do %>
    <%= button_tag t("txt.views.user_sessions.login"), :class => 'btn btn-primary', data: {disable_with: loading_indicator(t("txt.views.user_sessions.login"))} %>
  <% end %>
<% end %>
