<% if @datasets.any? %>
  <div class="form-group">
    <%= label_tag 'ds', t('txt.views.search_results.datasets'), :class => 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <% @datasets.each do |dataset| %>
        <label class="checkbox-inline">
          <%= check_box_tag "ds[]", dataset.name, search_dataset_selected?(dataset.name) %><%= dataset.name %>
        </label>
      <% end %>
      <div class="btn-group btn-group-xs">
        <button type="button" class="btn btn-default checkbox-select-all">
          <%= t('txt.views.search_results.all') %>
        </button>
        <button type="button" class="btn btn-default checkbox-select-none">
          <%= t('txt.views.search_results.none') %>
        </button>
      </div>
    </div>
  </div>
<% end %>
