<%= page_header title: 'Version' %>

<dl class="row">
  <% if Iqvoc.host_version %>
  <dt class="col-md-2">Application version:</dt>
  <dd class="col-md-10"><%= "#{Iqvoc.host_namespace} #{Iqvoc.host_version}" %></dd>
  <% end %>

  <% if File.exists?(Rails.root.join('headrev.txt')) %>
    <dt class="col-md-2">Revision</dt>
    <dd class="col-md-10"><%= File.read(Rails.root.join('headrev.txt')) %></dd>
  <% end %>

  <dt class="col-md-2">iQvoc core version:</dt>
  <dd class="col-md-10"><%= Iqvoc::VERSION %></dd>

  <dt class="col-md-2">RAILS_ENV:</dt>
  <dd class="col-md-10"><%= Rails.env %></dd>
</dl>
